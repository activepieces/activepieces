{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "node",
      "vite/client"
    ],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@activepieces/shared": [
        "../../packages/shared/src"
      ],
      "@activepieces/ee-shared": [
        "../../packages/ee/shared/src"  
      ],
      "@activepieces/pieces-framework": [
        "../../packages/pieces/framework/src"
      ],
      "@activepieces/pieces-common": [
        "../../packages/pieces/common/src"
      ],
      "ee-embed-sdk": [
        "../../packages/ee/ui/embed-sdk/src"
      ],
      "@activepieces/piece-ai": [
        "../../packages/pieces/community/ai/src"
      ]
    }
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx", "i18next-parser.config.js", "src/app/builder/builder-flow-status-section/index.tsx"]
}
