{
  "name": "pieces-firebase",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/pieces/community/firebase/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": [
        "dist/{projectRoot}"
      ],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/pieces/community/firebase",
        "tsConfig": "packages/pieces/community/firebase/tsconfig.lib.json",
        "packageJson": "packages/pieces/community/firebase/package.json",
        "main": "packages/pieces/community/firebase/src/index.ts",
        "assets": [
          "packages/pieces/community/firebase/*.md",
          {
            "input": "packages/pieces/community/firebase/src/i18n",
            "output": "./src/i18n",
            "glob": "**/!(i18n.json)"
          }
        ],
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "updateBuildableProjectDepsInPackageJson": true
      },
      "dependsOn": [
        "prebuild",
        "^build"
      ]
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "prebuild": {
      "dependsOn": [
        "^build"
      ],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/pieces/community/firebase",
        "command": "bun install --no-save --silent"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    }
  }
}