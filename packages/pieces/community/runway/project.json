{
  "name": "pieces-runway",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/pieces/community/runway/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": [
        "dist/{projectRoot}"
      ],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/pieces/community/runway",
        "tsConfig": "packages/pieces/community/runway/tsconfig.lib.json",
        "packageJson": "packages/pieces/community/runway/package.json",
        "main": "packages/pieces/community/runway/src/index.ts",
        "assets": [
          "packages/pieces/community/runway/*.md",
          {
            "input": "packages/pieces/community/runway/src/i18n",
            "output": "./src/i18n",
            "glob": "**/!(i18n.json)"
          }
        ],
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "updateBuildableProjectDepsInPackageJson": true
      },
      "dependsOn": ["prebuild", "^build"]
    },
    "prebuild": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/pieces/community/runway",
        "command": "npm ci"
      }
    },
    "build-with-deps": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run pieces-runway:prebuild",
          "nx run pieces-runway:build",
          "nx run pieces-runway:postbuild"
        ],
        "parallel": false
      }
    },
    "postbuild": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "dist/packages/pieces/community/runway",
        "command": "npm install"
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    }
  }
}