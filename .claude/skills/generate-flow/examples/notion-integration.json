    "displayName": "Salesforce to Notion sync",
    "schemaVersion": "16",
    "trigger": {
      "name": "trigger",
      "type": "PIECE_TRIGGER",
      "valid": true,
      "settings": {
        "input": {
          "auth": "{{connections['salesforce']}}",
          "object": "Account",
          "conditions": "Status = 'Active'"
        },
        "pieceName": "@activepieces/piece-salesforce",
        "triggerName": "new_record",
        "pieceVersion": "~0.1.17",
        "propertySettings": {
          "auth": { "type": "MANUAL" },
          "object": { "type": "MANUAL" },
          "conditions": { "type": "MANUAL" }
        }
      },
      "nextAction": {
        "name": "step_1",
        "skip": false,
        "type": "PIECE",
        "valid": true,
        "settings": {
          "input": {
            "auth": "{{connections['notion']}}",
            "content": "{{trigger['Notes__c']}}",
            "database_id": "database-uuid-here",
            "databaseFields": {
              "Owner": "{{trigger['Owner_Name__c']}}",
              "Status": "{{trigger['Status__c']}}",
              "Account Name": "{{trigger['Name']}}",
              "Employee Count": "{{trigger['NumberOfEmployees']}}"
            }
          },
          "pieceName": "@activepieces/piece-notion",
          "actionName": "create_database_item",
          "pieceVersion": "~0.3.3",
          "propertySettings": {
            "auth": { "type": "MANUAL" },
            "database_id": { "type": "MANUAL" },
            "databaseFields": {
              "type": "MANUAL",
              "schema": {
                "Owner": {
                  "type": "LONG_TEXT",
                  "required": false,
                  "displayName": "Owner"
                },
                "Status": {
                  "type": "LONG_TEXT",
                  "required": false,
                  "displayName": "Status"
                },
                "Account Name": {
                  "type": "SHORT_TEXT",
                  "required": false,
                  "displayName": "Account Name"
                },
                "Employee Count": {
                  "type": "NUMBER",
                  "required": false,
                  "displayName": "Employee Count"
                }
              }
            }
          },
          "errorHandlingOptions": {
            "retryOnFailure": { "value": false },
            "continueOnFailure": { "value": false }
          }
        },
        "displayName": "Create Notion Database Item"
      },
      "displayName": "New Salesforce Record"
    },
